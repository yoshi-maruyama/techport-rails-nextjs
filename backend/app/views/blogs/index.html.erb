<main class="container pt-5">
  <h4 class="mb-3">Blogs</h4>
  <div class="d-flex justify-content-end">
    <%= link_to "new blog", new_blog_path, class: "btn btn-primary w-25" %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4 pt-3">
    <% blogs.each do |blog| %>
      <%= render partial: "blog_card", locals: { blog: blog }%>
    <% end %>
  </div>
</main>
