<div class="col">
  <div class="card">
    <%= image_tag "rails.png", class: "card-img-top" %>
    <div class="card-body">
      <%= link_to blog_path(blog), class: "link-opacity-100-hover" do %>
      <h5 class="card-title"><%= blog.title %></h5>
      <% end %>
      <p class="card-text"><%= blog.summary %></p>
      <%= link_to "edit", edit_blog_path(blog), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
