 <div class="card">
  <div class="card-body">
    <%= link_to career_path(career), class: "link-opacity-100-hover" do %>
      <h5 class="card-title"><%= career.title %></h5>
    <% end %>
    <div class="card-text">
      <small class="text-body-secondary"><%= career.started_at %> ~ <%= career.ended_at %></small>
    </div>
    <p class="card-text"><%= career.description %></p>
    <%= link_to "edit", edit_career_path(career), class: "btn btn-secondary" %>
  </div>
</div>
